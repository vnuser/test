clear all;
% Cấu hình cho cổng COM
disp('Các cổng COM có sẵn trên hệ thống')
ports = serialportlist("all");
disp(ports);
%comPort = input('Nhập cổng Com bạn muốn kết nối: ','s');
%baudRate = input('Nhập tốc độ baudrate: ');
% Chuẩn bị cổng Serial
disp('MATLAB: đang thiết lập cổng Serial...');

% Đóng và xóa bất kì cổng Serial cũ nào đang mở

if ~isempty(instrfind('Port','COM2'))
    fclose(instrfind('Port','COM2'));
    delete(instrfind('Port','COM2'));
end

% Tạo đối tượng serialport mới
s = serialport("COM2",115200);
% Thiết lập kí tự kết thúc dòng cho việc đọc và ghi
% "LS" là kí tự '\n'
configureTerminator(s,"LF");

%disp(['MATLAB: Đã mở cổng ', comPort, ' với tốc độ ', num2str(baudRate), ' baud.']);
disp('MATLAB: Đang chờ dữ liệu từ Python...');

% Khởi tạo chỉ số của trục X
 dataIndex = 1;

% Khởi tạo các cửa sổ hiện thị dữ liệu
f1 = class_figures('góc nghiêng xe'); % Khởi tạo cửa sổ hiển thị góc nghiêng xe 
f2 = class_figures('góc nghiêng ghế'); % Khởi tạo cửa sổ hiển thị góc nghiêng ghế
%f3 = class_figures('khoảng cách siêu âm'); % Khởi tạo cửa sổ hiển thị khoảng cách siêu âm
%f4 = class_figures('encoder nâng xe'); % Khởi tạo cửa sổ hiển thị encoder nâng xe
f5 = class_figures('encoder nâng ghế'); % Khởi tạo cửa sổ hiện thị encoder nâng ghế
% Đọc và hiển thị dữ liệu

while true
    try
        if (class_figures.Getcount()>0)
            %disp(class_figures.Getcount());
            receivedData = readline(s);
            All_Data = strtrim(receivedData);
            disp(All_Data);
            matlab_struct = jsondecode(All_Data);
            %V1 = strtrim(matlab_struct.v1);
            D1 = matlab_struct.v1; % lấy dữ liệu góc nghiêng xe
            D2 = matlab_struct.v2; % lấy dữ liệu góc nghiêng ghế
            V3 = matlab_struct.v3; % lấy dữ liệu khoảng cách siêu âm
            %D3 = str2num(V3);
            D4 = matlab_struct.v4; % lấy dữ liệu encoder nâng xe
            %D4 = str2num(V4);
            V5 = matlab_struct.v5; % lấy dữ liệu encoder nâng ghế
            D5 = str2double(V5);
            f1.updateData(dataIndex,D1);
            disp('đã in f1');
            f2.updateData(dataIndex,D2);
            disp('đã in f2');
            f3.updateData(dataIndex,D3);
            disp('đã in f3');
            f4.updateData(dataIndex,D4);
            disp('đã in f4');
            f5.updateData(dataIndex,D5);
            disp('đã in f5');
            dataIndex = dataIndex + 1;
            pause(0.01);
        else
            delete(f1);
            delete(f2);
            delete(f3);
            delete(f4);
            delete(f5);
            break;
        end
    catch ME
        disp(['Lỗi khi đọc dữ liệu', ME.message]);
        clear s;    
        break;
    end
end